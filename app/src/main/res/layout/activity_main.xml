<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <TextView
        android:id="@+id/TvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Валюта"
        android:textSize="70sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EditOne"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/EditTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TvTitle"/>



    <EditText
        android:id="@+id/EditTwo"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:inputType="number"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/EditOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TvTitle"/>

    <Spinner
        android:id="@+id/spOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/EditOne"
        app:layout_constraintStart_toStartOf="@id/EditOne"
        app:layout_constraintTop_toBottomOf="@id/EditOne" />


    <Spinner
        android:id="@+id/spTwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/EditTwo"
        app:layout_constraintStart_toStartOf="@id/EditTwo"
        app:layout_constraintTop_toBottomOf="@id/EditTwo" />





</androidx.constraintlayout.widget.ConstraintLayout>